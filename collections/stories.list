<div class="stories" data-collection-id="{collection.id}">
    <div class="grid">
        {.repeated section items}
            {.if starred}
                <div class="pinned grid__pinned">
                    <div class="pinned__info">
                        <div class="grid__title" data-content-field="title">{title}</div>
                        {.if customContent.ctaTextValue}
                            <a class="grid__meta" href="{fullUrl}">
                                <span class="h6">{customContent.ctaTextValue}</span>
                            </a>
                        {.end}
                    </div>
                    {.section customContent.pinnedImage}
                        <img class="pinned__image image js-lazy-image" data-img-src="{assetUrl}" data-variants="{systemDataVariants}" data-original-size="{originalSize}" />
                    {.end}
                </div>
            {.end}
        {.end}
        {.repeated section items}
            {.if starred}{.or}
                <div class="grid__item">
                    <a class="grid__link" href="{fullUrl}" data-item-id="{id}">
                        <img class="grid__image image js-lazy-image" data-img-src="{assetUrl}" data-variants="{systemDataVariants}" data-original-size="{originalSize}" />
                        <div class="grid__info">
                            <div class="grid__title" data-content-field="title">{title}</div>
                            {.if customContent.ctaTextValue}
                                <div class="grid__meta">
                                    <span class="m">{customContent.ctaTextValue}</span>
                                </div>
                            {.end}
                        </div>
                    </a>
                </div>
            {.end}
        {.end}
    </div>
</div>
