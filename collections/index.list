{.var @isHomepage collection.homepage}
{.section collection}
    {.repeated section collections}
        {.if items}
            {.repeated section items}
                {.equal? customContent.customType "customCover"}
                    {@|apply cover.block}
                {.end}
            {.end}
        {.end}
        {.if mainContent}
            <div class="story__page-content {.if @isHomepage}js-scene{.end}">
                {.if @isHomepage}<div class="fixture js-puppet" data-wipe="1" data-speed="5"></div>{.end}
                {mainContent}
            </div>
        {.end}
    {.end}
{.end}
{.if collection.homepage}
    <div class="story__footer js-scene">
        <squarespace:block-field id="deem--footer" columns="12" />
    </div>
{.end}
