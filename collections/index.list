{.section collection}
    {.repeated section collections}
        {.if items}
            {.repeated section items}
                {.equal? @index 1}
                    {.equal? customContent.customType "customCover"}
                        {@|apply covers.block}
                    {.end}
                {.end}
            {.end}
        {.end}
        {.if mainContent}
            {mainContent}
        {.end}
    {.end}
{.end}
