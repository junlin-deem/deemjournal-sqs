<div class="story js-story" {.if item.customContent.colorBackground}data-hex="{item.customContent.colorBackground}"{.end}>
    <div class="story__cover">
        {.if item.customContent.coverHorizontalBottom}
            {@|apply story-masthead.block}
            <div class="story__intro">
                <div class="story__credits">
                    {item.customContent.creditsText.html}
                </div>
                <div class="story__image">
                    <img class="image js-lazy-image" data-img-src="{item.customContent.coverImage.assetUrl}" data-variants="{item.customContent.coverImage.systemDataVariants}" data-original-size="{item.customContent.coverImage.originalSize}" />
                </div>
            </div>
        {.end}
    </div>
    <div class="story__blocks js-story-blocks cms">
        {item.body}
    </div>
</div>
